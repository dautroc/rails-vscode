{
  "name": "rails-vscode",
  "displayName": "Rails VSCode",
  "description": "An extension for enhanced navigation in Ruby on Rails projects.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rails-vscode.toggleImplementationSpec",
    "onCommand:rails-vscode.goToSchemaDefinition"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rails-vscode.toggleImplementationSpec",
        "title": "Rails: Toggle Implementation/Spec File"
      },
      {
        "command": "rails-vscode.goToSchemaDefinition",
        "title": "Rails: Go to Schema Definition"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "eslint": "^8.41.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dautroc/rails-vscode.git"
  }
} 